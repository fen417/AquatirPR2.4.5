<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aquatir.PasswordPage"
             Title="Авторизация"
             BackgroundColor="#F0F2F5">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#4285F4</Color>
            <Color x:Key="AccentColor">#34A853</Color>
            <Color x:Key="WarningColor">#FBBC04</Color>
            <Color x:Key="ErrorColor">#EA4335</Color>
            <Color x:Key="TextColorPrimary">#212121</Color>
            <Color x:Key="TextColorSecondary">#424242</Color>
            <Color x:Key="TextColorHint">#757575</Color>
            <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
            <Color x:Key="BorderColorLight">#E0E0E0</Color>
            <Color x:Key="SelectedListItemColor">#E8F5E9</Color>
            <Color x:Key="DividerColor">#EEEEEE</Color>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TextColorSecondary}" />
                <Setter Property="FontFamily" Value="Roboto" />
                <Setter Property="LineHeight" Value="1.2" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="1" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.8" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <Style TargetType="Border">
                <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
                <Setter Property="Stroke" Value="{StaticResource BorderColorLight}" />
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="StrokeShape" Value="RoundRectangle 12" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="Black" Offset="5,5" Radius="10" Opacity="0.1" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="Entry">
                <Setter Property="PlaceholderColor" Value="{StaticResource TextColorHint}" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="{StaticResource TextColorPrimary}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="Keyboard" Value="Text" />
            </Style>

            <Style TargetType="Picker">
                <Setter Property="TitleColor" Value="{StaticResource TextColorHint}" />
                <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
                <Setter Property="TextColor" Value="{StaticResource TextColorPrimary}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="Margin" Value="0,5,0,5" />
            </Style>

            <Style TargetType="DatePicker">
                <Setter Property="TextColor" Value="{StaticResource TextColorPrimary}" />
                <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="Margin" Value="0,5,0,5" />
            </Style>

            <Style TargetType="CheckBox">
                <Setter Property="Color" Value="{StaticResource PrimaryColor}" />
            </Style>

            <Style x:Key="RemoveButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ErrorColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="WidthRequest" Value="35" />
                <Setter Property="HeightRequest" Value="35" />
                <Setter Property="CornerRadius" Value="17" />
                <Setter Property="Padding" Value="0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Авторизация"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"
                   TextColor="{StaticResource TextColorPrimary}" />
            <Border Margin="0,5">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Выберите город из списка:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="{StaticResource TextColorPrimary}" />
                    <Picker x:Name="CityPicker" Title="">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Тирасполь</x:String>
                                <x:String>Бендеры</x:String>
                                <x:String>Григориополь</x:String>
                                <x:String>Самовывоз</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Label Text="Введите название магазина или И/П:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="{StaticResource TextColorPrimary}" />
                    <Entry x:Name="ShopNameEntry" Placeholder="(Прим.'Акватир-1' или 'И/П Иванов (без номера)')"/>

                    <Entry x:Name="AccessCodeEntry" Placeholder="Введите код-доступа" IsPassword="True" Keyboard="Numeric" Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Border>

            <Button Text="Войти как пользователь"
                    Clicked="OnUserLoginClicked"
                    Margin="0,10"
                    BackgroundColor="{StaticResource PrimaryColor}" />
            <BoxView HeightRequest="1" Color="{StaticResource DividerColor}" Margin="0,40" HorizontalOptions="FillAndExpand" />
            <Label Text="ИЛИ"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"
                   TextColor="{StaticResource TextColorPrimary}" />
            <Border Margin="0,5">
                <Entry x:Name="ManagerCodeEntry" Placeholder="Введите код-доступа менеджера" IsPassword="True" Keyboard="Numeric" />
            </Border>

            <Button Text="Войти как менеджер"
                    Clicked="OnManagerLoginClicked"
                    Margin="0,10"
                    BackgroundColor="{StaticResource PrimaryColor}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>