<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aquatir.SettingsPage"
             Title="Настройки">
    <ScrollView>
        <StackLayout Padding="20">

            <!-- Settings switches -->
            <Frame BorderColor="#e0e0e0" Margin="0,5">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Автоматический возврат в главное меню после выбора товара" 
                           VerticalOptions="Center"
                           FontSize="16"
                           Grid.Column="0" />
                    <Switch x:Name="AutoReturnSwitch" 
                            Grid.Column="1" />
                </Grid>
            </Frame>

            <Frame BorderColor="#e0e0e0" Margin="0,5">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Отключить цветовые подсказки" 
                           VerticalOptions="Center"
                           FontSize="16"
                           Grid.Column="0" />
                    <Switch x:Name="IgnoreColorsSwitch" 
                            Grid.Column="1" />
                </Grid>
            </Frame>

            <Frame BorderColor="#e0e0e0" Margin="0,5">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Отображать продукцию в упаковках (УП.)"                              
                           VerticalOptions="Center"
                           FontSize="16"
                           Grid.Column="0" />
                    <Switch x:Name="ShowPackagedProductsSwitch" 
                            Grid.Column="1" />
                </Grid>
            </Frame>
            <StackLayout VerticalOptions="EndAndExpand" Margin="0,20,0,0">
                <Button Text="Редактор продукции" 
                    Clicked="OnProductEditorClicked"
                    BackgroundColor="#107C10"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold" 
                    CornerRadius="10"
                    Margin="0,20,0,5" />


                <Button Text="Что нового?" 
                    Clicked="OnWhatsNewClicked"
                    FontAttributes="Bold" 
                    BackgroundColor="#0078D7"
                    FontSize="18"
                    CornerRadius="10"
                    TextColor="White"
                    Margin="0,20,0,5" />

                <Button Text="Сообщить об ошибке" 
                    Clicked="OnReportIssueClicked"
                    FontAttributes="Bold" 
                    FontSize="18"
                    CornerRadius="10"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    Margin="0,5" />
                <Label x:Name="VersionLabel" 
                   Text="Версия программы: r3.0.0 от 25.03.2025" 
                   FontSize="14" 
                   HorizontalOptions="Center" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>