<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aquatir.SettingsPage"
             Title="Настройки">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Настройки приложения" 
                   FontSize="24" 
                   HorizontalOptions="Center"
                   Margin="0,20,0,30"/>

            <!-- Settings switches -->
            <Frame BorderColor="#e0e0e0" Margin="0,5">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Автоматический возврат" 
                           VerticalOptions="Center"
                           Grid.Column="0" />
                    <Switch x:Name="AutoReturnSwitch" 
                            Grid.Column="1" />
                </Grid>
            </Frame>

            <Frame BorderColor="#e0e0e0" Margin="0,5">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Игнорировать цвета" 
                           VerticalOptions="Center"
                           Grid.Column="0" />
                    <Switch x:Name="IgnoreColorsSwitch" 
                            Grid.Column="1" />
                </Grid>
            </Frame>

            <Frame BorderColor="#e0e0e0" Margin="0,5">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Показывать упакованные продукты" 
                           VerticalOptions="Center"
                           Grid.Column="0" />
                    <Switch x:Name="ShowPackagedProductsSwitch" 
                            Grid.Column="1" />
                </Grid>
            </Frame>

            <!-- Buttons -->
            <Button Text="Что нового?" 
                    Clicked="OnWhatsNewClicked"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    Margin="0,20,0,5" />

            <Button Text="Сообщить об ошибке" 
                    Clicked="OnReportIssueClicked"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    Margin="0,5" />

            <!-- Product Editor button -->
            <Button Text="Редактор продукции" 
                    Clicked="OnProductEditorClicked"
                    BackgroundColor="#107C10"
                    TextColor="White"
                    Margin="0,20,0,5" />
        </StackLayout>
    </ScrollView>
</ContentPage>